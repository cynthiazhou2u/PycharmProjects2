poetry='there is one sad truth too sad'

print(poetry,'-number of characters:',len(poetry)) # chars include spaces
print(poetry.capitalize())   #capilize only first char
print(poetry.upper())     #capitalize every char
print(poetry.lower())
print(poetry.isalpha())         #space is not alpha, to validate input values
print(poetry.isdigit())
print(poetry.count('sad'))

